<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="takephoto"
        android:onClick="takephotos"
        android:id="@+id/buttonphoto"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/homebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/homebutton"
        android:onClick="homeclick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonphoto"
        android:layout_alignEnd="@+id/buttonphoto"
        android:layout_marginBottom="100dp" />
    <ImageView
        android:id="@+id/viewphoto"
        android:layout_width="385dp"
        android:layout_height="374dp"
        android:layout_above="@+id/buttonphoto" />


</RelativeLayout>
